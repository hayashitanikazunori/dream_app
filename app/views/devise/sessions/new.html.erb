<div class="user_form">
  <h2>ログイン</h2>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス, class: 'form_label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'box' %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class: 'form_label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'box' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログインしたままにする %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <%= link_to "戻る", "/", class: 'back' %>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>DreamApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to "Top","/" %>
      </div>
      <ul>
        <% if user_signed_in? %>
          <li>
            <%= link_to "dreams", "#" %>
          </li>
          <li>
            <%= link_to "logout", "#" %>
          </li>
        <% else %>
          <li>
            <%= link_to "dreams", "#" %>
          </li>
          <li>
            <%= link_to "login", "#" %>
          </li>
          <li>
            <%= link_to "signup", "#" %>
          </li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
